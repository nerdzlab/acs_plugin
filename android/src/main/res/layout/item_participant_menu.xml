<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/icon_size_26dp"
        android:layout_height="@dimen/icon_size_26dp"
        android:layout_margin="@dimen/margin_16dp"
        app:tint="@color/setup_control_button_color_selector"
        tools:src="@drawable/ic_pin" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.CircularStdBook.16sp"
        android:textColor="@color/actions_text_color_selector"
        tools:text="Pin for me" />

</androidx.appcompat.widget.LinearLayoutCompat>