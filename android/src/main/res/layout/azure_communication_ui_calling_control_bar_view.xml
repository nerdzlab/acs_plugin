<com.acs_plugin.calling.presentation.fragment.calling.controlbar.ControlBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/azure_communication_ui_call_call_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_16dp"
    android:layout_marginVertical="@dimen/margin_12dp"
    android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/azure_communication_ui_call_cameraToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_6dp"
            android:contentDescription="@string/azure_communication_ui_calling_view_button_toggle_video_accessibility_label"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/azure_communication_ui_call_call_audio"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_camera_off"
            app:tint="@color/setup_control_button_color_selector" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/azure_communication_ui_call_call_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_6dp"
            android:accessibilityTraversalAfter="@id/azure_communication_ui_call_cameraToggle"
            android:contentDescription="@string/azure_communication_ui_calling_view_button_toggle_audio_accessibility_label"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/azure_communication_ui_call_audio_device_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/azure_communication_ui_call_cameraToggle"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_microphone_off"
            app:tint="@color/setup_control_button_color_selector" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/azure_communication_ui_call_audio_device_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_6dp"
            android:accessibilityTraversalAfter="@id/azure_communication_ui_call_call_audio"
            android:contentDescription="@string/azure_communication_ui_calling_view_button_device_options_accessibility_label"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/azure_communication_ui_call_control_bar_more"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/azure_communication_ui_call_call_audio"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_speaker"
            app:tint="@color/setup_control_button_color_selector" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/azure_communication_ui_call_control_bar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:accessibilityTraversalAfter="@id/azure_communication_ui_call_audio_device_button"
            android:background="@drawable/azure_communication_ui_calling_image_button"
            android:contentDescription="@string/azure_communication_ui_calling_view_more_menu_accessibility_label"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:padding="@dimen/padding_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/azure_communication_ui_call_end_call_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/azure_communication_ui_call_audio_device_button"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more"
            app:tint="@color/setup_control_button_color_selector" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/azure_communication_ui_call_end_call_button"
            android:layout_width="@dimen/button_height_56dp"
            android:layout_height="@dimen/button_height_56dp"
            android:accessibilityTraversalAfter="@id/azure_communication_ui_call_control_bar_more"
            android:background="@drawable/bg_error_rounded_r14"
            android:contentDescription="@string/azure_communication_ui_calling_view_button_hang_up_accessibility_label"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:padding="@dimen/padding_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/azure_communication_ui_call_control_bar_more"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_phone_call"
            app:tint="@color/white" />

</com.acs_plugin.calling.presentation.fragment.calling.controlbar.ControlBarView>
