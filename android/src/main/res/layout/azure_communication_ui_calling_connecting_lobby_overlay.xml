<com.acs_plugin.calling.presentation.fragment.calling.connecting.overlay.ConnectingOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/azure_communication_ui_call_connecting_lobby_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="0"
    android:background="@color/azure_communication_ui_calling_color_surface"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ProgressBar
        android:id="@+id/azure_communication_ui_call_connecting_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/progress_size_32dp"
        android:layout_height="@dimen/progress_size_32dp"
        android:contentDescription="@string/azure_communication_ui_calling_setup_view_button_connecting_call"
        android:indeterminateTint="@color/purple" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/azure_communication_ui_call_connecting_joining_text"
        style="@style/Text.CircularStdBold.20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_4dp"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/azure_communication_ui_calling_setup_view_button_connecting_call"
        android:contentDescription="@string/azure_communication_ui_calling_setup_view_button_connecting_call"
        android:importantForAccessibility="yes"
        android:focusable="true" />

</com.acs_plugin.calling.presentation.fragment.calling.connecting.overlay.ConnectingOverlayView>