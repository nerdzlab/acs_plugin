<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/padding_24dp"
    android:background="@drawable/bg_top_rounded_r12_white">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/participant_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/participant_list"
        style="@style/Text.CircularStdBold.20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_meeting_link_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_4dp"
        android:padding="@dimen/padding_12dp"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/padding_8dp"
        android:drawableStart="@drawable/ic_share"
        android:text="@string/share_meeting_link"
        style="@style/Text.CircularStdBook.16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_width_1dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@color/gray_background" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participant_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_16dp" />

</androidx.appcompat.widget.LinearLayoutCompat>