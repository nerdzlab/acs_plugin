<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Button styles-->
    <style name="ACSButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingHorizontal">@dimen/padding_16dp</item>
        <item name="cornerRadius">@dimen/corner_radius_8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="PurpleButtonStyle" parent="ACSButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/circular_std_bold</item>
        <item name="backgroundTint">@color/setup_control_button_color_selector</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>

    <style name="RoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_white_rounded_r12</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
    </style>

    <style name="TopRoundedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TopRoundedBottomSheetStyle</item>
    </style>

    <style name="TopRoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_r12_white</item>
    </style>

</resources>